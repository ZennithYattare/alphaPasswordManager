<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/displayeditParentTextPassword"
        android:layout_width="308dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPassword"
        app:boxBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaytextView4"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/displayeditTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:focusable="false"
            android:cursorVisible="false"
            android:clickable="false"
            android:longClickable="false"/>
    </com.google.android.material.textfield.TextInputLayout>

     <EditText
        android:id="@+id/displayeditTitle"
        android:layout_width="360dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaytextView2"
        android:focusable="false"
        android:cursorVisible="false"
        android:clickable="false"
        android:longClickable="false"/>

    <EditText
        android:id="@+id/displayeditUserEmail"
        android:layout_width="306dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="text"
        android:longClickable="false"
        app:layout_constraintEnd_toStartOf="@+id/btnCopyUserEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaytextView3" />

    <EditText
        android:id="@+id/displayeditNotesMultiline"
        android:layout_width="306dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:longClickable="false"
        android:maxLines="6"
        app:layout_constraintEnd_toStartOf="@+id/btnCopyNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displaytextView5" />

    <TextView
        android:id="@+id/displaytextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="359dp"
        android:text="Title"
        app:layout_constraintBottom_toTopOf="@+id/displayeditTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/displaytextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="322dp"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/displayeditUserEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayeditTitle" />

    <TextView
        android:id="@+id/displaytextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="324dp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/displayeditParentTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayeditUserEmail" />

    <TextView
        android:id="@+id/displaytextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="349dp"
        android:text="Notes"
        app:layout_constraintBottom_toTopOf="@+id/displayeditNotesMultiline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayeditParentTextPassword" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/btnCopyUserEmail"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/displayeditUserEmail"
        app:layout_constraintTop_toBottomOf="@+id/displayeditTitle"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/btnCopyPassword"
        android:layout_width="54dp"
        android:layout_height="53dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/displayeditParentTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/btnCopyUserEmail"
        app:srcCompat="@drawable/ic_copy" />

    <ImageButton
        android:id="@+id/btnCopyNote"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="25dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/displayeditNotesMultiline"
        app:layout_constraintTop_toBottomOf="@+id/displayeditParentTextPassword"
        app:srcCompat="@drawable/ic_copy" />

</androidx.constraintlayout.widget.ConstraintLayout>